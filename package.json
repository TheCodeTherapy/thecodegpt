{
  "name": "thecodegpt",
  "displayName": "TheCodeGPT",
  "description": "a simple GPT assistant",
  "version": "0.0.1",
  "publisher": "TheCodeTherapy",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheCodeTherapy/thecodegpt"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "AI",
    "Education",
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "TheCodeTherapy",
    "TheCodeGPT",
    "Marco Gomez",
    "ChatGPT",
    "GPT-4",
    "Code assistant",
    "Code completion",
    "Code generation",
    "Code suggestions",
    "Code snippets"
  ],
  "main": "./dist/extension.js",
  "icon": "screenshots/thumbnail.png",
  "contributes": {
    "commands": [
      {
        "command": "thecodegpt.question",
        "title": "Question GPT"
      },
      {
        "command": "thecodegpt.generateRepoInfo",
        "title": "Generate Repo Info"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "thecodegpt.question",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "thecodegpt.question",
        "key": "alt+q",
        "mac": "alt+q",
        "when": "editorTextFocus"
      },
      {
        "command": "thecodegpt.generateRepoInfo",
        "key": "alt+x",
        "mac": "alt+x",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
